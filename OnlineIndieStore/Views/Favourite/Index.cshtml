
<div class="p-4">
    <h4 class="text-center">Your Favourites</h4>
</div>
<hr />


@if (ViewBag.favourites != null)
{
    <div class="container">
        @foreach (var prod in ViewBag.favourites)
        {
            <div class="d-lg-flex pb-3">
                <div class="card border border-info col-md-6 col-lg-4 col-sm-12">
                    <img class="rounded card-img-top p-3" src="@("~/image/" + prod.Product.Image.ImageName)" asp-append-version="true" width="300" height="300" />
                </div>
                @*PRODUCT CONTENT: TITLE, PRICE & SELECTION*@
                <div class="card-body mb-1 col-lg-8 col-sm-12">
                    <div class="mb-4">
                        <h5 class="card-title">@prod.Product.Name</h5>
                        <p class="text-muted">@prod.Product.Description</p>
                        <h4 class="card-text">@prod.Product.Price </h4>
                    </div>
                    @*ADD TO BASKET*@
                    <div class="d-flex justify-content-start">
                        <a asp-controller="Favourite" asp-action="RemoveProductFromFavourite" asp-route-id="@prod.Product.ID" class="btn btn-outline-success d-none d-lg-block mr-3">Remove</a>
                        <a asp-controller="Cart" asp-action="Buy" asp-route-id="@prod.Product.ID" class="btn btn-outline-success d-none d-lg-block">Add to Cart</a>
                    </div>
                    <div class="d-flex">
                        <div class="btn btn-outline-secondary d-block d-lg-none mr-3">
                            <a asp-controller="Favourite" asp-action="RemoveProductFromFavourite" asp-route-id="@prod.Product.ID">
                                <svg class="bi bi-x-square" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708-.708l7-7a.5.5 0 0 1 .708 0z" />
                                    <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 0 0 0 .708l7 7a.5.5 0 0 0 .708-.708l-7-7a.5.5 0 0 0-.708 0z" />
                                </svg>
                            </a>
                        </div>
                        <div class="btn btn-outline-secondary d-block d-lg-none">
                            <a asp-controller="Cart" asp-action="Buy" asp-route-id="@prod.Product.ID">
                                <svg class="bi bi-basket" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M10.243 1.071a.5.5 0 0 1 .686.172l3 5a.5.5 0 1 1-.858.514l-3-5a.5.5 0 0 1 .172-.686zm-4.486 0a.5.5 0 0 0-.686.172l-3 5a.5.5 0 1 0 .858.514l3-5a.5.5 0 0 0-.172-.686z" />
                                    <path fill-rule="evenodd" d="M1 7v1h14V7H1zM.5 6a.5.5 0 0 0-.5.5v2a.5.5 0 0 0 .5.5h15a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5H.5z" />
                                    <path fill-rule="evenodd" d="M14 9H2v5a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V9zM2 8a1 1 0 0 0-1 1v5a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V9a1 1 0 0 0-1-1H2z" />
                                    <path fill-rule="evenodd" d="M4 10a.5.5 0 0 1 .5.5v3a.5.5 0 1 1-1 0v-3A.5.5 0 0 1 4 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 1 1-1 0v-3A.5.5 0 0 1 6 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 1 1-1 0v-3A.5.5 0 0 1 8 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 1 1-1 0v-3a.5.5 0 0 1 .5-.5zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 1 1-1 0v-3a.5.5 0 0 1 .5-.5z" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <p>No favourites added yet.</p>
    </div>
    <br />
}   
    <div class="d-flex justify-content-around">
        <a asp-controller="ProductCategories" asp-action="Index" class="btn-info p-2 text-center">Continue Shopping</a>
    </div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
