                                {
                                    test = @productSelection.Selection.ToString();
                                }
                            }
                        }
                        <p>@test</p>
                    }*@

                    <p class="card-text">Price: @prod.Product.Price </p>
                    <div class="d-flex justify-content-around">
                        <a href="#" class="btn btn-primary">Add to Basket</a>
                        <a href="#" class="btn btn-success">Favourite</a>
                    </div>
                </div>
            </div>
        }
    </div>