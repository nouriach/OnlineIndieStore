@model IEnumerable<OnlineIndieStore.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row col-md-12">
    @foreach(var prod in Model)
    {
        <div class="container col-md-4">
            <div class="card">
                <img class="card-img-top" alt="text" src="@prod.Product.ImageUrl" />
            </div>
            <div class="card-body">
                <h5 class="card-title">@prod.Product.Name</h5>
                <p class="card-text">
                    @prod.Product.Description
                </p>
            </div>
            <ul class="list-group list-group-flush">

                <li class="list-group-item">
                    Categories: @prod.Category.CategoryName
                </li>
            
            </ul>
            <div class="card-body">
                <p class="card-text">Selection: @prod.Selection</p>
                <div class="d-flex justify-content-around">
                    <a href="#" class="btn btn-primary">Add to Basket</a>
                    <a href="#" class="btn btn-success">Favourite</a>
                </div>
            </div>
        </div>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Selection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductCategoryID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductCategoryID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductCategoryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
